{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["backend/src/**/*.ts", "frontend/src/**/*.ts"],  // Include both src folders
  "exclude": ["node_modules"]
}
