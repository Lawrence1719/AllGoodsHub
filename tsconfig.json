{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "jsx": "react-jsx", 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["backend/src/**/*.ts", "frontend/src/**/*.ts", "frontend/src/pages/AuthForm.tsx", "frontend/src/components/UI/auth_form.tsx"],  // Include both src folders
  "exclude": ["node_modules"]
}
